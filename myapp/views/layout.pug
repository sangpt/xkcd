doctype html
html
  head
    title XKCD Archive
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(href='https://fonts.googleapis.com/css?family=Sofia', rel='stylesheet')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js')
    script(src="/javascripts/main.js")
  body(class='center')
    div(id='fb-root')
    script() 
    nav(class='navbar navbar-default')
      div(class='container-fluid')
        div(class='navbar-brand title') XKCD Archive
        p(class='navbar-text title') A webcomic of romance, sarcasm, math, and language.
        form(class='navbar-form navbar-right', style='display: inline', method='POST', id='frm')
          div(class='input-group form-group-sm')
            input(type='text', class='form-control', placeholder='Enter the Comic ID', id='id_comic')
            div(class='input-group-btn')
              button(class='btn btn-default btn-sm', type='submit', id='btn_search')
                i(class='glyphicon glyphicon-search')
    block content

